@model IEnumerable<Tecnologia>

@{
    ViewData["Title"] = "Tecnologias";
}

<h1 class="text-center">Tecnologias</h1>
<hr />

<div class="d-flex">
    <a class="bi bi-plus-circle-fill ms-auto fs-2" asp-action="Crear" asp-controller="Tecnologia"></a>
</div>

<div class="container tabla mt-3">
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Tecnologia tecnologia in Model)
            {
                <tr>
                    <td class="text-center">@tecnologia.TecnologiaID</td>
                    <td class="text-center">@tecnologia.Nombre</td>
                    <td class="text-center"><i class="bi bi-check-circle-fill"></i></td>
                    <td class="text-center">
                        <a asp-action="ConfirmarEliminar" asp-controller="Tecnologia" asp-route-TecnologiaID="@tecnologia.TecnologiaID" class="btn btn-danger">Eliminar</a>
                        <a asp-action="Editar" asp-controller="Tecnologia" asp-route-TecnologiaID="@tecnologia.TecnologiaID" class="btn btn-primary">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
